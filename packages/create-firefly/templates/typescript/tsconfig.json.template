{
    "include": ["src"],
    "compilerOptions": {
        /* features */
        "experimentalDecorators": true,
        "useDefineForClassFields": true,
        
        /* syntax */
        "target": "ES2020",
        "module": "ESNext",
        "lib": ["ES2020"],
        "skipLibCheck": true,

        /* bundler mode */
        "moduleResolution": "Bundler",
        "allowImportingTsExtensions": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,

        /* import path aliases */
        "baseUrl": "./src",
        "paths": {
            "@/*": [
                "./*"
            ]
        }
    }
}