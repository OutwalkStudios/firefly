{
  "name": "@outwalk/firefly",
  "type": "module",
  "version": "0.10.2",
  "description": "Firefly - a modern scalable web framework.",
  "main": "dist/cjs/index.cjs",
  "module": "dist/esm/index.js",
  "types": "types/index.d.ts",
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=20"
  },
  "bin": {
    "firefly": "dist/cjs/cli.cjs"
  },
  "scripts": {
    "build": "rollup -c",
    "lint": "eslint src",
    "prepublishOnly": "npm run lint && npm run build"
  },
  "keywords": [
    "express",
    "mongoose",
    "decorators",
    "dependency",
    "injection",
    "framework",
    "http",
    "web"
  ],
  "files": [
    "dist",
    "types"
  ],
  "exports": {
    ".": {
      "types": "./types/index.d.ts",
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.cjs"
    },
    "./errors": {
      "types": "./types/index.d.ts",
      "import": "./dist/esm/errors.js",
      "require": "./dist/cjs/errors.cjs"
    },
    "./express": {
      "types": "./types/index.d.ts",
      "import": "./dist/esm/express.js",
      "require": "./dist/cjs/express.cjs"
    },
    "./mongoose": {
      "types": "./types/index.d.ts",
      "import": "./dist/esm/mongoose.js",
      "require": "./dist/cjs/mongoose.cjs"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/OutwalkStudios/firefly.git",
    "directory": "packages/firefly"
  },
  "bugs": {
    "url": "https://github.com/OutwalkStudios/firefly/issues"
  },
  "homepage": "https://github.com/OutwalkStudios/firefly#readme",
  "author": "Outwalk Studios <support@outwalkstudios.com> (https://www.outwalkstudios.com/)",
  "license": "MIT",
  "dependencies": {
    "@rollup/plugin-commonjs": "^28.0.2",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^16.0.0",
    "chalk": "^4.1.2",
    "chokidar": "^4.0.3",
    "cookie-parser": "^1.4.7",
    "dotenv": "^16.4.7",
    "esbuild": "^0.24.2",
    "glob": "^11.0.0",
    "nodemon": "^3.1.9",
    "rollup": "^4.29.1",
    "rollup-plugin-esbuild": "^6.1.1",
    "rollup-plugin-typescript-paths": "^1.5.0",
    "yargs-parser": "^21.1.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "eslint": "^9.17.0",
    "globals": "^15.14.0"
  },
  "peerDependenciesMeta": {
    "express": {
      "optional": true
    },
    "mongoose": {
      "optional": true
    }
  },
  "peerDependencies": {
    "express": "^4.21.2",
    "mongoose": "^8.9.2"
  }
}
