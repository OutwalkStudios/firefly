{
  "name": "@outwalk/firefly",
  "type": "module",
  "version": "0.13.2",
  "description": "Firefly - a modern scalable web framework.",
  "main": "dist/cjs/index.cjs",
  "module": "dist/esm/index.js",
  "types": "types/index.d.ts",
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=22"
  },
  "bin": {
    "firefly": "dist/cjs/cli.cjs"
  },
  "scripts": {
    "build": "rollup -c",
    "lint": "eslint src",
    "prepublishOnly": "npm run lint && npm run build"
  },
  "keywords": [
    "express",
    "decorators",
    "dependency",
    "injection",
    "framework",
    "http",
    "web"
  ],
  "files": [
    "dist",
    "types"
  ],
  "exports": {
    ".": {
      "types": "./types/index.d.ts",
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.cjs"
    },
    "./eslint": {
      "types": "./types/index.d.ts",
      "import": "./dist/esm/eslint.js",
      "require": "./dist/cjs/eslint.cjs"
    },
    "./events": {
      "types": "./types/index.d.ts",
      "import": "./dist/esm/events.js",
      "require": "./dist/cjs/events.cjs"
    },
    "./errors": {
      "types": "./types/index.d.ts",
      "import": "./dist/esm/errors.js",
      "require": "./dist/cjs/errors.cjs"
    },
    "./express": {
      "types": "./types/index.d.ts",
      "import": "./dist/esm/express.js",
      "require": "./dist/cjs/express.cjs"
    },
    "./hono": {
      "types": "./types/index.d.ts",
      "import": "./dist/esm/hono.js",
      "require": "./dist/cjs/hono.cjs"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/OutwalkStudios/firefly.git",
    "directory": "packages/firefly"
  },
  "bugs": {
    "url": "https://github.com/OutwalkStudios/firefly/issues"
  },
  "homepage": "https://github.com/OutwalkStudios/firefly#readme",
  "author": "Outwalk Studios <support@outwalkstudios.com> (https://www.outwalkstudios.com/)",
  "license": "MIT",
  "dependencies": {
    "@eslint/js": "^9.39.1",
    "@rollup/plugin-commonjs": "^29.0.0",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^16.0.3",
    "@rollup/plugin-typescript": "^12.3.0",
    "@typescript-eslint/parser": "^8.46.4",
    "chalk": "^4.1.2",
    "chokidar": "^4.0.3",
    "dotenv": "^17.2.3",
    "esbuild": "^0.27.0",
    "eslint": "^9.39.1",
    "glob": "^11.0.3",
    "globals": "^16.5.0",
    "nodemon": "^3.1.11",
    "rollup": "^4.53.2",
    "rollup-plugin-esbuild": "^6.2.1",
    "rollup-plugin-typescript-paths": "^1.5.0",
    "tslib": "^2.8.1",
    "yargs-parser": "^22.0.0"
  },
  "peerDependenciesMeta": {
    "typescript": {
      "optional": true
    },
    "express": {
      "optional": true
    },
    "hono": {
      "optional": true
    },
    "@hono/node-server": {
      "optional": true
    }
  },
  "peerDependencies": {
    "@hono/node-server": "^1.19.6",
    "express": "^5.1.0",
    "hono": "^4.10.6"
  }
}
